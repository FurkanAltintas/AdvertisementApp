@model AdvertisementCreateDto

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin: 100px auto;">
    <form asp-action="Create" asp-controller="Application" method="post">
        <div class="mb-3">
            <label>İlanın Başlığı :</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label>İlanın İçeriği :</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-check form-switch mb-3">
            <input asp-for="Status" class="form-check-input" type="checkbox">
            <label asp-for="Status" class="form-check-label">Aktif</label>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-dark btn-sm">Kaydet</button>
        </div>

    </form>
</div>

