@model List<ProvidedServiceListDto>

@{
    ViewData["Title"] = "Index";
}

<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container px-5">
            <h1 class="masthead-heading mb-0">Bilge Ajans</h1>
            <h2 class="masthead-subheading mb-0">Yazılımın Ortak Alanı</h2>
            <a class="btn btn-primary btn-xl rounded-pill mt-5" href="#scroll">Daha Fazla Bilgi Edinin</a>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header>

@for (int i = 0; i < Model?.Count; i++)
{
    <section id="scroll">
        <div class="container px-5">
            <div class="row gx-5 align-items-center">
                <div class="col-lg-6 @(i%2==0 ? "order-lg-2" : null)">
                    <div class="p-5"><img class="img-fluid rounded-circle" src="~/themes/assets/img/@Model[i].ImagePath" alt="..." /></div>
                </div>
                <div class="col-lg-6 @(i%2==0?"order-lg-1":null)">
                    <div class="p-5">
                        <h2 class="display-4">
                            @Model[i].Title
                        </h2>
                        <p>
                            @(Model[i].Description.Length < 150
                        ? Model[i].Description
                        : Model[i].Description.Substring(0, Model[i].Description
                        .Substring(0, 150).LastIndexOf(" ")))
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
